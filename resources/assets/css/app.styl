            color black !important

/////////////////////////
// VueSelect Overrides //
/////////////////////////

.v-select
  padding 0
  height auto
  min-height calc(2.25rem + 2px)
  
  // Regular Select
  &.vs--single
    &.vs--open
      .vs__selected
        top 3px
        
    &.vs--clearable:not(.vs--open):not(.vs--empty)
      .vs__selected-options
        padding-left 23px
        
    .vs_
      &_selected
        color white
        
  // Select Many
  &.vs--multiple
    .vs_
      &_selected
        color white
        background rgba(0, 0, 0, 0.35)
        padding 0 0 0 8px
        border none
        height 30px
        
        .vs__deselect
          background transparent
          transition background 0.15s linear
          padding 0 8px
          height 100%
          border-top-right-radius 4px
          border-bottom-right-radius 4px
          
          &:hover
            background rgba(0, 0, 0, 0.35)
            
            svg
              opacity 0.9
          
          svg
            opacity 0.6
            transition opacity 0.15s linear
            fill white

  .vs_
    &_dropdown-toggle
      border none
      height 100%
      min-height calc(2.25rem + 2px)
      position relative
      
    &_selected-options
      transition padding-left 20ms linear
      padding-left 5px
      
    &_selected
      letter-spacing 0
      
    &_search
      color white
      
    &_clear
      fill white
      position absolute
      top 5px
      left 11px
      
    &_actions
      padding 0 3px 0 0
      
    &_open-indicator
      height 100%
      top 2px
      width 27px
      opacity 0.8
      position relative
      cursor pointer
      
      b
        border-color #fff transparent transparent transparent
        border-style solid
        border-width 7px 5px 0 5px
        position absolute
        top 50%
        left 50%
        margin-left -5px
        margin-top -3px
        width 0
        height 0
    
    &_dropdown-menu
      max-height 200px
      padding 0
      background #4f595a
      border-color #798385
      
    &_dropdown-option
      background transparent
      color white
      padding 6px
      font-size 15px
      
      &--selected
        background-color #626c6e
      
      &--highlight
        background-color #798385
        
////////////////////////
// Dropzone Overrides //
////////////////////////

.vue-dropzone
  &.single-file
    border none
    padding 0
    min-height 38px
    background none
    
    .dz-message
      margin 0
      padding 0.375rem 0.75rem
      font-size 1rem
      background rgba(255, 255, 255, 0.2)
      color white
      border 1px dashed rgba(255, 255, 255, 0.50)
      border-radius 0.25em
      cursor pointer
      
    &.dz-started
      .dz-message
        display none
      
    // PREVIEW //
    
    .dz-preview
      min-height 0
      
      .dz-remove
        font-size 18px
        
      .dz-progress-container
        height 38px
        display none
        
        .dz-remove
          display block
          margin-left 10px
          margin-right 15px
          font-size 18px
        
        .dz-progress
          height 100%
          border 1px solid rgba(255, 255, 255, 0.3)
          border-radius 0.25em
          
          > span
            display block
            height 100%
            width 0
            background rgba(0, 0, 0, 0.4)
            border-radius 0.25em
      
      .dz-completed-container
        display none
        align-items center
        justify-content space-between
        
        .dz-image
          position relative
          border-radius 0.25em
          overflow hidden
          
          img:not([src])
            display none
            
          .dz-success-mark
          .dz-remove-container
            opacity 0
            transition opacity 0.15s linear, background 0.15s linear
            position absolute
            z-index 10
            width 100%
            height 100%
            top 0
            left 0
            
            i
              font-size 25px
              color rgba(255, 255, 255, 0.7)
              text-shadow 1px 1px 2px rgba(0, 0, 0, 0.65)
              
            &.opaque
              opacity 1
              
          .dz-remove-container
            display none
            z-index 20
            
            i
              color rgba(255, 255, 255, 0.3)
              transition color 0.15s linear
              
            &:hover
              background rgba(0, 0, 0, 0.3)
              
              i
                color rgba(255, 255, 255, 0.7)
            
      &.dz-processing
        .dz-progress-container
          display block
          
      &.dz-complete:not(.dz-error)
        .dz-progress-container
          display none !important
          
        .dz-completed-container
          display flex

