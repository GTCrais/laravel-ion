/////////////////////
// Table Overrides //
/////////////////////

.default-sort-handle-cell
  width 20px
  min-width 20px
  padding 0
  position relative
  overflow hidden
  cursor move
  
  .sort-handle-container
    text-align center
    width 14px
    position absolute
    top 0
    border-right 1px solid rgba(255, 255, 255, 0.15)
    height 100%
    transition width 0.08s linear
    
    &:hover
      width 20px
     
.object-list
  .controls
    a
      margin-left 2px
  
      &:first-of-type
        margin-left 0
        
      &.disabled
        opacity 0.4
        cursor default
    
    i
      position relative
      
      &.fa-plus-square-o
        top 1px
      
.table
  &.table-wrap
    th
    td
      white-space normal
      
      &.no-wrap
        white-space nowrap
  
  th
    font-weight 500
    background-color rgba(255, 255, 255, 0.06)
    border-top none

    &.controls
      width 1%

  th.sort-handle-cell
    @extends .default-sort-handle-cell
    cursor default

  th.content-width
  td.content-width
    width 1%

  td
    &.sort-handle-cell
      @extends .default-sort-handle-cell
      
  i.table-boolean
    border-radius 50%
    font-size 10px
    text-align center
    position relative
    top -2px

    &.fa-times
      padding 0 4px

    &.fa-check
      padding 4px 0
      background rgba(255, 255, 255, 0.7)
      color rgba(0, 0, 0, 0.8)
      width 18px
      
